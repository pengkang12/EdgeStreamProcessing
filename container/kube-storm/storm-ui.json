{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "storm-ui",
    "labels": {
      "name": "storm-ui"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "ui",
        "image": "kevin2333/rasp-storm-ui",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 8080
          }
        ],
        "resources": {
          "limits": {
            "cpu": "200m"
          }
        }
      }
    ],
    "nodeSelector": {
       "name" : "$nodeName"
    }
  }
}

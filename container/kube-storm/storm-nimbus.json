{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "nimbus",
    "labels": {
      "name": "nimbus"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "nimbus",
        "image": "kevin2333/rasp-storm-nimbus:latest",
        "ports": [
          {
            "containerPort": 6627
          }
        ],
        "resources": {
          "limits": {
            "cpu": "1600m",
            "memory": "1Gi",
            "ephemeral-storage": "1Gi"
          }
        }
      }
    ],
    "nodeSelector": {
       "name" : "$nodeName"
    }
  }
}
